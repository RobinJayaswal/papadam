<!DOCTYPE html>
<html>
<head>
  <title>Papadam</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
	
<div id="wrap">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Papadam</a>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if params[:controller] == 'home'%>">
			<a href="/">Home</a> </li>
        <li class="<%= 'active' if params[:controller] == 'music'%>">
			<a href="/music"> Music </a> </li>
        <li class="<%= 'active' if params[:controller] == 'videos'%>">
			<a href="/videos">Videos</a> </li>
        <li class="<%= 'active' if params[:controller] == 'blog'%>">
			<a href="/blog">Blog</a> </li>
      </ul>
    </div>
  </div>
</nav>


<%= yield %>

</div>

<div id="footer">
      <div class="container">
		  <p>Created by Robin Jayaswal</p>
      </div>
</div>

</body>
</html>
